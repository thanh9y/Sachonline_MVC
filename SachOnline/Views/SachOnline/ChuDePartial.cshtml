@model IEnumerable<SachOnline.Models.CHUDE>
<ul class="list-group">
    <li class="list-group-item active" style="font-weight:bold; margin-top: 40px; text-align:center">SÁCH THEO CHỦ ĐỀ</li>
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <a href="@Url.Action("SachTheoChuDe","SachOnline", new { iMaCD = item.MaCD})" class="list-group-item">@item.TenChuDe</a>
        </li>
    }
</ul>